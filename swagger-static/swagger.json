        "operationId": "AppController_getHello",
        "parameters": [],
        "responses": {
          "200": {
            "description": ""
          }
        }
      }
    },
    "/users": {
      "get": {
        "operationId": "UsersController_allUser",
        "summary": "Get all users",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Return a list of all users"
          }
        },
        "tags": [
          "users"
        ]
      }
    },
    "/users/{id}": {
      "get": {
        "operationId": "UsersController_getUserById",
        "summary": "Get a user by ID",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "query",
            "description": "User ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Return the user by ID"
          }
        },
        "tags": [
          "users"
        ]
      }
    },
    "/users/create": {
      "post": {
        "operationId": "UsersController_addUser",
        "summary": "Create a new user",
        "parameters": [],
        "requestBody": {
          "required": true,
          "description": "User to be created",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Return the newly created user"
          }
        },
        "tags": [
          "users"
        ]
      }
    },
    "/users/verify": {
      "post": {
        "operationId": "UsersController_verification",
        "summary": "Verify a user",
        "parameters": [],
        "requestBody": {
          "required": true,
          "description": "Provide the email and user ID for verification",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserVerification"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Return true if user is verified, false otherwise"
          }
        },
        "tags": [
          "users"
        ]
      }
    }
  },
